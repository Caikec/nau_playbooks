# Put in place by ansible

{{ nginx_log_dir }}/*access.log {
  create 0640 www-data adm
  compress
  delaycompress
  dateext
  missingok
  notifempty
  daily
  rotate 90
  size 1M
  sharedscripts
  postrotate
	[ ! -f /var/run/nginx.pid ] || kill -HUP `cat /var/run/nginx.pid`
  endscript
  lastaction
{% if COMMON_OBJECT_STORE_LOG_SYNC -%}
    {{ COMMON_OBJECT_STORE_LOG_SYNC_SCRIPT }} -d "{{ nginx_log_dir }}*" -b "{{ COMMON_OBJECT_STORE_LOG_SYNC_BUCKET }}" -p "access_logs"
{% endif -%}
  endscript
}